{
  "version": 2,
  "builds": [
    {
      "src": "api/check-reminders.js",
      "use": "@vercel/node",
      "config": {
        "schedule": "10 15 * * *"
      }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}
